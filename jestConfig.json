{
    "globals": {
        "ts-jest": {
            "tsConfigFile": "ts/tsconfig.json",
            "enableTsDiagnostics": false
        }
    },
    "transform": {
        "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "testPathIgnorePatterns": [
        "<rootDir>/build/",
        "<rootDir>/docs/",
        "<rootDir>/lib/",
        "<rootDir>/src/",
        "<rootDir>/node_modules/"
    ]
}
